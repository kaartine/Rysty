<% for @game in @games %>    
<tr>  
  <td><%=@game.id%></td>
  <td><%=@game.when %></td>
  <td><%=@game.home_team.name %></td>
  <td><%=@game.guest_team.name %></td>
  <td><%=@game.home_goals %></td>
  <td><%=@game.guest_goals %></td>
  <td><%=@game.draw %></td>
</tr>
<% end %>
</table>
