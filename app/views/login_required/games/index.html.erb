<h3><%= t(:t_games) %></h3>

<table class="nav">
  <tr>  
    <th><%=t :t_id %></th>
    <th><%=t :t_date %></th>
    <th><%=t :home_team_id %></th>
    <th><%=t :guest_team_id %></th>
<th><%=t :t_home_goals %></th>
<th><%=t :t_guest_goals %></th>
